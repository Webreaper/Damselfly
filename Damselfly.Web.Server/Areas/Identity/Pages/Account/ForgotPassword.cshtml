@page
@model Damselfly.Areas.Identity.Pages.Account.ForgotPasswordModel
@{ ViewData["Title"] = "Forgot your password?"; }

<h1>@ViewData["Title"]</h1>

<div class="login-container">
    <div class="login-fieldset">
        <h4>Enter your email.</h4>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="login-fieldrow">
                <label asp-for="Input.Email" class="login-fieldlabel"></label>
                <input asp-for="Input.Email" class="login-fieldcontrol"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="login-fieldrow">
                <button type="submit" class="btn btn-primary btn-login">Submit</button>
            </div>
            <hr/>
            <div class="login-fieldrow">
                <div class="login-fieldcontrol">
                    <a href="~/Identity/Account/Login">Log in with existing account</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}